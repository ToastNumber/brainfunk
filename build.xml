<project>
    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes"/>
    </target>
	
    <target name="run">
		<java classname="brainfunk.BrainFunk">
			<classpath>
				<pathelement location="build/classes"/>
			</classpath>
			<arg value='false "examples/print.txt"'/>
		</java>
    </target>

</project>